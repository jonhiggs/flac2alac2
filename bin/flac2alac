#!/usr/bin/env ruby
require 'shellwords'
require 'debugger'

def usage
  puts <<-EOF.gsub(/^../, "")
    Convert FLAC files to Apple Lossless files to be imported into iTunes.

    USAGE:
      $0 [OPTIONS] <file.flac> [file2.flac] [...]

    EXAMPLES:
      Convert File:
        $0 <file.flac>

      Convert file and delete original FLAC.
        $0 -d <file.flac>

      Convert Directory:
        $0 <dir_containing_flacs>

    OPTIONS:
      --delete    delete files once done.
      --dry-run   don't create or delete any files.
  EOF

  exit 1
end

def switches
  s = []
  s.push("-d") if DELETE_WHEN_DONE
  s.join(" ")
end

def files
  FILES.flatten.map do |f|
    Shellwords.escape(f) if File.exist?(f)
  end.join(" ")
end

usage if ARGV.empty?

PATHS = []
FILES = []

ARGV.each do |arg|
  case arg
  when "--delete"
    DELETE_WHEN_DONE = true
  when "--dry-run"
    DRY_RUN = true
  else
    PATHS.push arg
  end
end

DELETE_WHEN_DONE = false if !defined?(DELETE_WHEN_DONE)
DRY_RUN = false if !defined?(DRY_RUN)

PATHS.each do |path|
  next unless File.exist?(path)
  FILES.push(path) if File.file?(path)

  if File.directory?(path)
    FILES.push(`find #{path} -iname \*.flac`.split("\n"))
  end
end

if DRY_RUN
  puts files
  exit 1
end

`#{File.dirname(__FILE__)}/../lib/flac2alac "#{switches}" #{files}`

exit 0
